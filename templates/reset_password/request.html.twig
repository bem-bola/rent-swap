{% extends 'base_user.html.twig' %}

{% block title %}Reusiix - Réinitialiser mot de passe{% endblock %}

{% block body %}
        <h1 class="h3 fw-700 text-center pb-3">Réinitialiser le mot de passe</h1>
        {% include '_partial/alert_user.html.twig' %}
        <div class="pb-3">
            <small>
                Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        {{ form_start(requestForm) }}

        <div class="">

            {{ form_label(requestForm.email, '', {
                'label_attr' : {
                    'class': 'mb-2 fw-500'
                }
            }) }}
            <span class="text-danger">*</span>
            {{ form_widget(requestForm.email, {
                'attr': {
                    'class': 'form-control mb-4 fw-300 py-3 px-3 rounded-4',
                    'data-type-pattern': "email"
                }
            }) }}

        </div>


        <div class="d-flex justify-content-center">
            <button class="bg-theme-dark text-white border-0 px-5 py-3 rounded-pill" type="submit">Envoyer</button>
        </div>

        {{ form_end(requestForm) }}


{% endblock %}
