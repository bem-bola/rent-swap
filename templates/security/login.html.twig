{% extends 'base_user.html.twig' %}

{% block title %}Reusiix - Je me connecte{% endblock %}
{% block body %}
    <form method="post" class="">

        <input type="hidden" name="_target_path" value="{{ referer }}">

        <div class="mb-5">
            <h1 class="h3 fw-700 text-center mb-1">Se connecter</h1>
            {% include '_partial/alert_user.html.twig' %}
            {% if error %}
                <div class="text-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="">
            <label for="username" class="mb-2 fw-500">Adresse e-mail <span class="text-danger">*</span></label>
            <input type="email" value="{{ last_username }}" name="_username" id="username"
                   class="form-control mb-4 fw-300 py-3 px-3 rounded-4" data-type-pattern="email" autocomplete="email" required autofocus >
        </div>

        <div class="col-12 mb-4 position-relative content-password" >
            <label for="password" class="mb-2 fw-500 col-12">Mot de passe <span class="text-danger">*</span></label>
            <input type="password" class="form-control mb-4 fw-300 py-3 px-3 rounded-4" autocomplete="current-password" name="_password" id="password" required >
            <span class="rounded-end-4 cursor-pointer toggle-password position-absolute position-absolute bottom-18 end-2" id=""><i class="bi bi-eye fs-4"></i></span>
        </div>

        <div class="mb-4">
            <input type="checkbox" name="_remember_me" class="rounded-1 border-theme-dark form-check-input"
                   id="remember">
            <label for="remember" class="fw-500 mb-2 font-size-08 fst-italic">Se rappeler de moi</label>
        </div>

        <div class="text-center mb-4">
            <p class="text-center mb-0">Mot de passe oubli√© ? <a href="{{ path('app_reset_password_forgot_request')}}" class="fw-500">Cliquez ici <i
                            class="bi bi-arrow-right"></i></a></p>
            <p class="text-center mb-0">Pas encore inscrit ? <a href="{{ path('app_register') }}" class="fw-500">Cliquez ici <i
                            class="bi bi-arrow-right"></i></a></p>
        </div>

        <div class="d-flex justify-content-center">
            <button class="bg-theme-dark text-white border-0 px-5 py-3 rounded-pill" type="submit">Se
                connecter
            </button>
        </div>

    </form>
{% endblock %}