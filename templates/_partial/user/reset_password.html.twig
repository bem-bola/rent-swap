
<!-- Modal -->
<div class="modal fade col-10" id="form-user-reset-password" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="form-userLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="container d-flex search-item flex-column flex-lg-row mt-2 position-relative">
            <button type="button" class="btn-close position-absolute top-0 end-2" data-bs-dismiss="modal" aria-label="Close"></button>
                {{ form_start(formResetPassword, {
                    'attr': {
                        'class': 'col-12 mt-5 mb-4'
                    }
                }) }}

                <div class="col-10 mx-auto mb-3">
                    {{ form_label(formResetPassword.password, '', {
                        'label_attr': {
                            'class': 'mb-2 fw-500'
                        }
                    }) }}
                    <span class="text-danger">*</span>
                    <div class="col-12 position-relative content-password">
                        {{ form_widget(formResetPassword.password, {
                            'attr': {
                                'class': 'form-control mb-4 fw-300 py-3 px-3 rounded-4 password',
                            }
                        }) }}
                        <span class="rounded-4 cursor-pointer position-absolute bottom-17 end-4 toggle-password" id=""><i class="bi bi-eye fs-4"></i></span>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-center">
                    {{ form_widget(formResetPassword.save, {
                        'attr': {
                            'class': 'bg-theme-dark text-white border-0 px-auto py-2 rounded-4 col-3 mt-3'
                        }
                    }) }}
                </div>

                {{ form_end(formResetPassword) }}
            </div>

        </div>
    </div>
</div>