<div class="me-4 d-none d-lg-block">
    <section class="container shadow-sm rounded-3 bg-theme-white-2 fs-6 py-3">
        <form class="container d-sm-flex d-md-flex flex-wrap" method="post">
            <div class="col-10 ms-3 mb-4">
                <label for="search-item" class="">Recherche</label>
                <input type="text" class="form-control rounded-3 " id="search-item" name="item" autocomplete="off"
                       placeholder="Rechercher">
            </div>
            <div class="col-10 ms-3 mb-4">
                <label for="search-category" class="">Catégories</label>

                <select class="form-select rounded-3" id="search-category" name="category" placeholder="">
                    <option disabled selected class="text-black-50">Selectionner</option>
                    {% for city in 1..10 %}
                        <option>Option-{{ city }}</option>
                    {% endfor %}
                </select>

            </div>
            <div class="col-10 ms-3 mb-4">
                <div class="input-group" id="city-search-content">
                    <label for="search-city" class="col-12">Localisation</label>
                    <input type="text" class="form-control rounded-start-3 border-end-0" id="search-city" autocomplete="off" value="" placeholder="Localisation">
                    <span class="input-group-text rounded-end-3 btn-empty-input"><i class="bi bi-x-circle"></i></span>
                </div>

                <div class="rounded-3 shadow-sm bg-white mt-2 position-relative">
                    <ul class="py-2 position-absolute z-1 bg-white col-12 d-none" id="city-options">
                        <li class="city-name py-1 color-theme-dark-olive-green col-12" data-value=""></li>
                    </ul>
                </div>
            </div>
            <div class="col-10 ms-3 mb-4">
                <label class="col-12">Prix</label>
                <div class="d-flex">
                    <div class="input-group me-2" id="price-min">
                        <input type="text" class="form-control rounded-start-3 border-end-0 filter-price" placeholder="Minimum">
                        <span class="input-group-text border-end-3 rounded-end-3">€</span>
                    </div>

                    <div class="input-group" id="price-max">
                        <input type="text" class="form-control rounded-start-3 border-end-0 filter-price" placeholder="Maximum">
                        <span class="input-group-text border-end-3 rounded-end-3">€</span>
                    </div>
                </div>
            </div>

            <div class="ms-3 mb-3 col-12">
                <button type='submit' class="bg-theme-success color-theme-white border-0 px-1 py-2 rounded-2 col-4 me-1">Rechercher</button>
                <button class="bg-transparent px-1 py-2 rounded-2 col-6 border-theme-success text-black-50 empty-filter">Effacer les filtres</button>
            </div>

        </form>
    </section>
</div>

