
<!-- Modal -->
<div class="modal fade col-10" id="form-conversation" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="form-userLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
         <div class="container d-flex search-item flex-column flex-lg-row mt-2 position-relative">
            <button type="button" class="btn-close position-absolute top-0 end-2" data-bs-dismiss="modal" aria-label="Close"></button>
            {{ form_start(form, {
               'attr': {
                  'class': 'col-12 mt-5 mb-4'
               }
            }) }}

            <div class="col-10 mx-auto mb-3">
               {{ form_label(form.content, 'Message', {
                  'label_attr': {
                     'class': 'mb-2 fw-500'
                  }
               }) }}
               <span class="text-danger">*</span>
               <div class="col-12 position-relative content-password">
                  {{ form_widget(form.content, {
                     'attr': {
                        'class': 'form-control mb-4 fw-300 py-3 px-3 rounded-4 password',
                     }
                  }) }}
               </div>
            </div>

            <div class="col-12 d-flex justify-content-center">
               {{ form_widget(form.save, {
                  'attr': {
                     'class': 'bg-theme-dark text-white border-0 px-auto py-2 rounded-4 col-3 mt-3'
                  }
               }) }}
            </div>

            {{ form_end(form) }}
         </div>

      </div>
   </div>
</div>